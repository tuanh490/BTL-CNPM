        }

        .btn {
            color: white;
            padding: 5px 10px;
            border: none;
            cursor: pointer;
        }

        .btn-restore {
            background-color: #28a745;
        }

        .btn-restore:hover {
            background-color: #218838;
        }

        .btn-delete {
            background-color: #dc3545;
        }

        .btn-delete:hover {
            background-color: #a71d2a;
        }

        .pagination {
            margin-top: 20px;
            text-align: center;
        }

        .pagination button {
            margin: 0 5px;
            padding: 5px 10px;
            cursor: pointer;
        }

        .pagination .page-numbers {
            display: inline-flex;
            gap: 5px;
        }

        .pagination .current-page {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <%- include('./partials/header') %>
    <div class="container">
        <h2>Danh sách xe đã xóa</h2>

        <!-- Deleted Vehicles Table -->
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Mã phòng</th>
                    <th>Loại xe</th>
                    <th>Biển xe</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody id="deletedVehicleTableBody">
                <!-- Rows will be rendered dynamically -->
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="pagination">
            <button onclick="previousPage()">Previous</button>
            <span id="pageNumbers"></span>
            <button onclick="nextPage()">Next</button>
        </div>
    </div>

    <script>
        let deletedVehicles = [
            {
                ma_phong: '101',
                loai_xe: 'xe_may',
                bien_xe: '29A12345',
            },
            {
                ma_phong: '102',
                loai_xe: 'o_to',
                bien_xe: '30B67890',
            },
            {
                ma_phong: '103',
                loai_xe: 'xe_dap',
                bien_xe: 'Xe123',
            }
        ];

        let currentPage = 1;
        const pageSize = 5;

        function renderDeletedTable() {
            const tableBody = document.getElementById('deletedVehicleTableBody');
            tableBody.innerHTML = '';
            const startIndex = (currentPage - 1) * pageSize;
            const currentDeletedVehicles = deletedVehicles.slice(startIndex, startIndex + pageSize);

            currentDeletedVehicles.forEach(vehicle => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${vehicle.ma_phong}</td>
                    <td>${vehicle.loai_xe}</td>
                    <td>${vehicle.bien_xe}</td>
                    <td>
                        <button class="btn btn-success" onclick="restoreVehicle('${vehicle.ma_phong}')">Khôi phục</button>
                        <button class="btn btn-danger" onclick="permanentlyDeleteVehicle('${vehicle.ma_phong}')">Xóa vĩnh viễn</button>
                    </td>
                `;
                tableBody.appendChild(row);
            });

            renderPagination();
        }

        function renderPagination() {
            const pageNumbers = document.getElementById('pageNumbers');
            pageNumbers.innerHTML = '';
            const totalPages = Math.ceil(deletedVehicles.length / pageSize);

            for (let i = 1; i <= totalPages; i++) {
                const button = document.createElement('button');
                button.textContent = i;
                if (i === currentPage) {
                    button.classList.add('current-page');
                }
                button.onclick = () => {
                    currentPage = i;
                    renderDeletedTable();
                };
                pageNumbers.appendChild(button);
            }
        }

        function previousPage() {
            if (currentPage > 1) {
                currentPage--;
                renderDeletedTable();
            }
        }

        function nextPage() {
            const totalPages = Math.ceil(deletedVehicles.length / pageSize);
            if (currentPage < totalPages) {
                currentPage++;
                renderDeletedTable();
            }
        }

        function restoreVehicle(maPhong) {
            const vehicleToRestore = deletedVehicles.find(vehicle => vehicle.ma_phong === maPhong);
            if (vehicleToRestore) {
                deletedVehicles = deletedVehicles.filter(vehicle => vehicle.ma_phong !== maPhong);
                // Assuming `vehicles` is the main list, you would add the vehicle back to the original array
                vehicles.push(vehicleToRestore);
                renderDeletedTable();
            }
        }

        function permanentlyDeleteVehicle(maPhong) {
            deletedVehicles = deletedVehicles.filter(vehicle => vehicle.ma_phong !== maPhong);
            renderDeletedTable();
        }

        // Initial render
        renderDeletedTable();
    </script>
    <%- include('./partials/footer_infosection') %>
</body>

</html>
